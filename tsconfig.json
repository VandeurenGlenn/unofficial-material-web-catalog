{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "outDir": "./www",
    "moduleResolution":"nodenext",
    "declaration": true,
    "declarationDir": "./www/typings",
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,    
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "types": [
      "@material/web"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["./node_modules"]
}